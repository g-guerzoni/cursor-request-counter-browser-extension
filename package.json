{
  "name": "cursor-request-counter",
  "version": "1.0.0",
  "description": "Track Cursor.com API usage statistics",
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy-html": "cp src/popup.html dist/",
    "copy-icons": "cp -r src/icons dist/",
    "build": "npm run clean && tsc && npm run copy-html && npm run copy-icons",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "typescript": "^5.3.3"
  }
} 