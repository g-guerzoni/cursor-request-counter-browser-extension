{
  "manifest_version": 3,
  "name": "Cursor Request Counter",
  "version": "2.0.0",
  "description": "Track your Cursor AI requests and usage in real-time",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.cursor.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "bundles/background.bundle.js",
    "type": "module"
  }
}
